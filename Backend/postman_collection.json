{
  "info": {
    "name": "E-Learning Platform API",
    "description": "Complete API collection for E-Learning Platform with RAG Chatbot",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Teacher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"username\": \"teacher1\",\n  \"password\": \"password123\",\n  \"role\": \"teacher\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"username\": \"student1\",\n  \"password\": \"password123\",\n  \"role\": \"student\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.access_token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "teacher1",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "password123",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Update Current User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newemail@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users?skip=0&limit=100",
              "host": ["{{base_url}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "limit",
                  "value": "100"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Courses",
      "item": [
        {
          "name": "Create Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Introduction to Python\",\n  \"description\": \"Learn Python programming from scratch\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/courses/",
              "host": ["{{base_url}}"],
              "path": ["courses", ""]
            }
          }
        },
        {
          "name": "List All Courses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses?skip=0&limit=100",
              "host": ["{{base_url}}"],
              "path": ["courses"],
              "query": [
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "limit",
                  "value": "100"
                }
              ]
            }
          }
        },
        {
          "name": "List My Courses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses/my-courses",
              "host": ["{{base_url}}"],
              "path": ["courses", "my-courses"]
            }
          }
        },
        {
          "name": "Get Course Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses/1",
              "host": ["{{base_url}}"],
              "path": ["courses", "1"]
            }
          }
        },
        {
          "name": "Update Course",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Advanced Python Programming\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/courses/1",
              "host": ["{{base_url}}"],
              "path": ["courses", "1"]
            }
          }
        },
        {
          "name": "Delete Course",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/courses/1",
              "host": ["{{base_url}}"],
              "path": ["courses", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Enrollments",
      "item": [
        {
          "name": "Enroll in Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"course_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/enrollments/",
              "host": ["{{base_url}}"],
              "path": ["enrollments", ""]
            }
          }
        },
        {
          "name": "Get My Enrollments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/enrollments/my-enrollments",
              "host": ["{{base_url}}"],
              "path": ["enrollments", "my-enrollments"]
            }
          }
        },
        {
          "name": "Get Course Enrollments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/enrollments/course/1",
              "host": ["{{base_url}}"],
              "path": ["enrollments", "course", "1"]
            }
          }
        },
        {
          "name": "Unenroll from Course",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/enrollments/1",
              "host": ["{{base_url}}"],
              "path": ["enrollments", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Course Materials",
      "item": [
        {
          "name": "Upload Files (Batch)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "files",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/files/upload/1",
              "host": ["{{base_url}}"],
              "path": ["files", "upload", "1"]
            }
          }
        },
        {
          "name": "List Course Materials",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/files/course/1",
              "host": ["{{base_url}}"],
              "path": ["files", "course", "1"]
            }
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/files/1",
              "host": ["{{base_url}}"],
              "path": ["files", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "AI Chat",
      "item": [
        {
          "name": "Chat with Course Materials",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"course_id\": 1,\n  \"question\": \"What are the main topics covered in this course?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chat/",
              "host": ["{{base_url}}"],
              "path": ["chat", ""]
            }
          }
        },
        {
          "name": "Chat with Streaming",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"course_id\": 1,\n  \"question\": \"Explain the concept of object-oriented programming\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chat/stream",
              "host": ["{{base_url}}"],
              "path": ["chat", "stream"]
            }
          }
        }
      ]
    }
  ]
}
